{
  "name": "@beincom/nest-domain-event",
  "version": "0.0.1",
  "description": "Domain event handler integration for nestjs.",
  "main": "./dist/index.js",
  "repository": "https://github.com/Beincomm/nest-domain-event.git",
  "author": "The Van <thevan@evol.vn>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Beincomm/nest-domain-event/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "prepublish:npm": "yarn build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "yarn build",
    "publish:next": "npm publish --access public --tag next",
    "test:e2e": "jest --config ./tests/jest-e2e.json --runInBand",
    "test:e2e:dev": "jest --config ./tests/jest-e2e.json --runInBand --watch",
    "prerelease": "yarn build",
    "release": "release-it",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nestjs/common": "^9.1.4",
    "@nestjs/core": "^9.1.4",
    "@beincom/common": "^0.0.5",
    "@beincom/domain": "^0.0.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.7",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "release-it": "^15.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
